<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/champagne"
    tools:context=".booking_confirmation">

    <TextView
        android:id="@+id/cancelconfirmationtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Confirmation"
        android:textColor="@color/congo_brown"
        android:textSize="30sp"
        android:fontFamily="@font/metrophobic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/train_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Train Name :"
        android:textSize="18sp"
        android:textColor="@color/congo_brown"
        android:fontFamily="@font/assistant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancelconfirmationtitle" />

    <TextView
        android:id="@+id/ccf_train_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/assistant"
        android:textSize="18sp"
        android:textColor="@color/congo_brown"
        app:layout_constraintStart_toEndOf="@+id/train_name_title"
        app:layout_constraintTop_toBottomOf="@+id/cancelconfirmationtitle" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Train No :"
        android:textSize="18sp"
        android:fontFamily="@font/assistant"
        android:textColor="@color/congo_brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/train_name_title" />

    <TextView
        android:id="@+id/ccf_train_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="4dp"
        android:textSize="18sp"
        android:fontFamily="@font/assistant"
        android:textColor="@color/congo_brown"
        app:layout_constraintStart_toEndOf="@+id/textView21"
        app:layout_constraintTop_toBottomOf="@+id/train_name_title" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textSize="18sp"
        android:text="Date of Boarding :"
        android:fontFamily="@font/assistant"
        android:textColor="@color/congo_brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ccf_train_id" />

    <TextView
        android:id="@+id/ccf_date_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:textSize="18sp"
        android:fontFamily="@font/assistant"
        android:textColor="@color/congo_brown"
        app:layout_constraintStart_toEndOf="@+id/textView22"
        app:layout_constraintTop_toBottomOf="@+id/ccf_train_id" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Passengers :"
        android:textSize="23sp"
        android:fontFamily="@font/assistant"
        android:textColor="@color/congo_brown"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ccf_date_board" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ccf_tic_paserRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/textView23"
        app:layout_constraintBottom_toTopOf="@id/textView13"
        android:layout_marginBottom="3dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:text="Ticket Fare :"
        android:textSize="18sp"
        android:fontFamily="@font/assistant"
        android:textColor="@color/congo_brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textView31" />

    <TextView
        android:id="@+id/fare_actual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:textSize="18sp"
        android:layout_marginBottom="70dp"
        android:fontFamily="@font/assistant"
        android:textColor="@color/congo_brown"
        app:layout_constraintBottom_toTopOf="@id/textView31"
        app:layout_constraintStart_toEndOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Ticket Id :"
        android:textSize="18sp"
        android:fontFamily="@font/assistant"
        android:textColor="@color/congo_brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textView31" />

    <TextView
        android:id="@+id/tic_id_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:textSize="18sp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/assistant"
        android:textColor="@color/congo_brown"
        app:layout_constraintBottom_toTopOf="@id/textView31"
        app:layout_constraintStart_toEndOf="@+id/textView65" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="110dp"
        android:textAlignment="center"
        android:text="Your Ticket has been successfully cancelled\nThe ticket fare has been\n  credited to your wallet"
        android:fontFamily="@font/assistant"
        android:textColor="@color/green"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/ccf_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="30dp"
        android:onClick="cancelTic"
        android:textColor="@color/red"
        android:background="@color/sandrift"
        android:padding="5dp"
        android:text="Cancel Ticket"
        android:textStyle="bold"
        android:textSize="30sp"
        android:fontFamily="@font/assistant"/>

</androidx.constraintlayout.widget.ConstraintLayout>