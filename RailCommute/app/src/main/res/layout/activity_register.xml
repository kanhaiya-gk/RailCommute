<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@color/champagne">

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/congo_brown"
        android:textSize="36dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/metrophobic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />   // logo

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputfname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="32dp"
        android:hint="First name"
        app:startIconDrawable="@drawable/ic_person"
        android:drawablePadding="10dp"
        style="@style/LoginTextInputLayoutStyle"
        app:boxCornerRadiusTopStart="28dp"
        app:boxCornerRadiusTopEnd="28dp"
        app:boxCornerRadiusBottomEnd="28dp"
        app:boxCornerRadiusBottomStart="28dp"
        app:startIconTint="@color/congo_brown"
        app:hintTextColor="@color/congo_brown"
        android:textColorHint="@color/congo_brown"
        app:endIconMode="clear_text"
        app:endIconTint="@color/congo_brown"
        app:boxStrokeWidthFocused="2dp"
        app:boxStrokeColor="@color/congo_brown"
        app:boxStrokeWidth="1dp"
        app:errorEnabled="true"
        app:errorIconDrawable="@drawable/ic_error">

        <com.google.android.material.textfield.TextInputEditText
            android:textColor="@color/congo_brown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/assistant" />

    </com.google.android.material.textfield.TextInputLayout>  // fname

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputlname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/inputfname"
        app:layout_constraintStart_toStartOf="@id/inputfname"
        app:layout_constraintTop_toBottomOf="@+id/inputfname"
        android:layout_marginTop="9dp"
        android:hint="Last name"
        app:startIconDrawable="@drawable/ic_person"
        android:drawablePadding="10dp"
        style="@style/LoginTextInputLayoutStyle"
        app:boxCornerRadiusTopStart="28dp"
        app:boxCornerRadiusTopEnd="28dp"
        app:boxCornerRadiusBottomEnd="28dp"
        app:boxCornerRadiusBottomStart="28dp"
        app:startIconTint="@color/congo_brown"
        app:hintTextColor="@color/congo_brown"
        android:textColorHint="@color/congo_brown"
        app:endIconMode="clear_text"
        app:endIconTint="@color/congo_brown"
        app:boxStrokeWidthFocused="2dp"
        app:boxStrokeColor="@color/congo_brown"
        app:boxStrokeWidth="1dp"
        app:errorEnabled="true"
        app:errorIconDrawable="@drawable/ic_error">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/assistant" />

    </com.google.android.material.textfield.TextInputLayout>   // lname

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputnumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/inputlname"
        app:layout_constraintStart_toStartOf="@+id/inputlname"
        app:layout_constraintTop_toBottomOf="@+id/inputlname"
        android:layout_marginTop="9dp"
        android:hint="Mobile Number"
        app:prefixText="+91 "
        app:prefixTextColor="@color/congo_brown"
        app:startIconDrawable="@drawable/ic_phone"
        android:drawablePadding="10dp"
        style="@style/LoginTextInputLayoutStyle"
        app:boxCornerRadiusTopStart="28dp"
        app:boxCornerRadiusTopEnd="28dp"
        app:boxCornerRadiusBottomEnd="28dp"
        app:boxCornerRadiusBottomStart="28dp"
        app:startIconTint="@color/congo_brown"
        app:hintTextColor="@color/congo_brown"
        android:textColorHint="@color/congo_brown"
        app:endIconMode="clear_text"
        app:endIconTint="@color/congo_brown"
        app:boxStrokeWidthFocused="2dp"
        app:boxStrokeColor="@color/congo_brown"
        app:boxStrokeWidth="1dp"
        app:errorEnabled="true"
        app:errorIconDrawable="@drawable/ic_error">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/assistant"
            android:inputType="phone"/>

    </com.google.android.material.textfield.TextInputLayout>   // mobile num

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/inputnumber"
        app:layout_constraintStart_toStartOf="@+id/inputnumber"
        app:layout_constraintTop_toBottomOf="@+id/inputnumber"
        android:layout_marginTop="9dp"
        android:hint="Email Id"
        app:startIconDrawable="@drawable/ic_email"
        android:drawablePadding="10dp"
        style="@style/LoginTextInputLayoutStyle"
        app:boxCornerRadiusTopStart="28dp"
        app:boxCornerRadiusTopEnd="28dp"
        app:boxCornerRadiusBottomEnd="28dp"
        app:boxCornerRadiusBottomStart="28dp"
        app:startIconTint="@color/congo_brown"
        app:hintTextColor="@color/congo_brown"
        android:textColorHint="@color/congo_brown"
        app:endIconMode="clear_text"
        app:endIconTint="@color/congo_brown"
        app:boxStrokeWidthFocused="2dp"
        app:boxStrokeColor="@color/congo_brown"
        app:boxStrokeWidth="1dp"
        app:errorEnabled="true"
        app:errorIconDrawable="@drawable/ic_error">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/assistant"
            android:inputType="textEmailAddress"/>

    </com.google.android.material.textfield.TextInputLayout>   // email

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/inputEmail"
        app:layout_constraintStart_toStartOf="@+id/inputEmail"
        app:layout_constraintTop_toBottomOf="@+id/inputEmail"
        android:layout_marginTop="9dp"
        android:hint="Password"
        app:startIconDrawable="@drawable/ic_lock"
        android:drawablePadding="10dp"
        style="@style/LoginTextInputLayoutStyle"
        app:boxCornerRadiusTopStart="28dp"
        app:boxCornerRadiusTopEnd="28dp"
        app:boxCornerRadiusBottomEnd="28dp"
        app:boxCornerRadiusBottomStart="28dp"
        app:startIconTint="@color/congo_brown"
        app:hintTextColor="@color/congo_brown"
        android:textColorHint="@color/congo_brown"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/congo_brown"
        app:boxStrokeWidthFocused="2dp"
        app:boxStrokeColor="@color/congo_brown"
        app:boxStrokeWidth="1dp"
        app:errorEnabled="true"
        app:errorIconDrawable="@drawable/ic_error">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/assistant"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>   // password

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputConfirmPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/inputPassword"
        app:layout_constraintStart_toStartOf="@+id/inputPassword"
        app:layout_constraintTop_toBottomOf="@+id/inputPassword"
        android:layout_marginTop="9dp"
        android:hint="Confirm Password"
        app:startIconDrawable="@drawable/ic_lock"
        android:drawablePadding="10dp"
        style="@style/LoginTextInputLayoutStyle"
        app:boxCornerRadiusTopStart="28dp"
        app:boxCornerRadiusTopEnd="28dp"
        app:boxCornerRadiusBottomEnd="28dp"
        app:boxCornerRadiusBottomStart="28dp"
        app:startIconTint="@color/congo_brown"
        app:hintTextColor="@color/congo_brown"
        android:textColorHint="@color/congo_brown"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/congo_brown"
        app:boxStrokeWidthFocused="2dp"
        app:boxStrokeColor="@color/congo_brown"
        app:boxStrokeWidth="1dp"
        app:errorEnabled="true"
        app:errorIconDrawable="@drawable/ic_error">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/assistant"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>   // cnfm pwd

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:background="@drawable/btn_bg"
        android:backgroundTint="@color/congo_brown"
        android:text="Sign Up"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="@color/champagne"
        android:onClick="checkCred"
        android:fontFamily="@font/assistant"
        app:layout_constraintEnd_toEndOf="@+id/inputConfirmPassword"
        app:layout_constraintStart_toStartOf="@+id/inputConfirmPassword"
        app:layout_constraintTop_toBottomOf="@+id/inputConfirmPassword" />    // sign in btn

    <TextView
        android:id="@+id/alreadyHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:shadowColor="@color/congo_brown"
        android:text="Already Have an account?"
        android:fontFamily="@font/assistant"
        android:textSize="16dp"
        android:clickable="true"
        android:onClick="regLogin"
        android:textColor="@color/congo_brown"
        app:layout_constraintEnd_toEndOf="@+id/btnRegister"
        app:layout_constraintStart_toStartOf="@+id/btnRegister"
        app:layout_constraintTop_toBottomOf="@+id/btnRegister" />   // already accn

</androidx.constraintlayout.widget.ConstraintLayout>