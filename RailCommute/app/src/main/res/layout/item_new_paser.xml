<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardMaxElevation="5dp"
    android:layout_margin="5dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/newpaser_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Name :"
            android:textColor="@color/congo_brown"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/newpaser_actual_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/newpaser_name_title"
            android:text="Bignamed Personnn"
            android:textColor="@color/congo_brown"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/newpaser_gender_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newpaser_name_title"
            android:layout_marginTop="5dp"
            android:textColor="@color/congo_brown"
            android:text="Gender :"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/newpaser_actual_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newpaser_name_title"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/newpaser_gender_title"
            android:text="Female"
            android:textColor="@color/congo_brown"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/newpaser_age_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/newpaser_actual_age"
            android:text="Age :"
            android:layout_marginRight="2dp"
            android:textColor="@color/congo_brown"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/newpaser_actual_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/cross"
            android:layout_marginRight="15dp"
            android:text="100"
            android:textColor="@color/congo_brown"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/cross"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_cancel_2"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>